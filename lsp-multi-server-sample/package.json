{
	"name": "lsp-sample-multi-server",
	"version": "1.0.0",
	"description": "A multi server LSP example",
	"categories": [],
	"keywords": [
		"multi-root ready"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/Microsoft/vscode-extension-samples"
	},
	"license": "MIT",
	"author": "Microsoft Corporation",
	"publisher": "vscode-samples",
	"main": "./client/out/extension",
	"scripts": {
		"compile": "tsc -b",
		"postinstall": "cd client && npm install && cd ../server && npm install && cd ..",
		"lint": "eslint",
		"vscode:prepublish": "npm run compile",
		"watch": "tsc -b -w"
	},
	"contributes": {
		"configuration": {
			"properties": {
				"lspMultiServerSample.enable": {
					"default": true,
					"description": "Controls the enablement.",
					"scope": "resource",
					"type": "boolean"
				},
				"lspMultiServerSample.options": {
					"default": {},
					"description": "Additional options.",
					"scope": "resource",
					"type": "object"
				},
				"lspMultiServerSample.trace.server": {
					"default": "off",
					"description": "Traces the communication between VSCode and the language server.",
					"enum": [
						"off",
						"messages",
						"verbose"
					],
					"scope": "window",
					"type": "string"
				}
			},
			"title": "Multi LSP configuration",
			"type": "object"
		}
	},
	"activationEvents": [
		"onLanguage:plaintext"
	],
	"dependencies": {},
	"devDependencies": {
		"@eslint/js": "^9.13.0",
		"@stylistic/eslint-plugin": "^2.9.0",
		"@types/mocha": "^5.2.0",
		"@types/node": "^20",
		"eslint": "^9.13.0",
		"typescript": "^5.7.2",
		"typescript-eslint": "^8.16.0"
	},
	"engines": {
		"vscode": "^1.52.0"
	}
}
