{
	"name": "lsp-embedded-language-service-sample",
	"description": "A language server example using language services to support embedded languages",
	"author": "Microsoft Corporation",
	"license": "MIT",
	"version": "1.0.0",
	"repository": {
		"type": "git",
		"url": "https://github.com/Microsoft/vscode-extension-samples"
	},
	"publisher": "vscode-samples",
	"categories": [],
	"keywords": [],
	"engines": {
		"vscode": "^1.74.0"
	},
	"activationEvents": [
		"onLanguage:html1"
	],
	"main": "./client/out/extension",
	"contributes": {
		"grammars": [
			{
				"language": "html1",
				"path": "./syntaxes/html1.tmLanguage.json",
				"scopeName": "text.html1.basic"
			}
		],
		"languages": [
			{
				"extensions": [
					".html1"
				],
				"id": "html1"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "cd client && npm install && cd .. && npm run compile",
		"compile": "tsc -b",
		"watch": "tsc -b -w",
		"lint": "eslint",
		"postinstall": "cd client && npm install && cd ../server && npm install && cd .."
	},
	"devDependencies": {
		"@eslint/js": "^9.13.0",
		"@stylistic/eslint-plugin": "^2.9.0",
		"@types/node": "^22"
	},
	"scripts": {
		"compile": "tsc -b"
	}
}
