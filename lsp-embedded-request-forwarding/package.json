{
	"activationEvents": [
		"onLanguage:html1"
	],
	"contributes": {
		"grammars": [
			{
				"language": "html1",
				"path": "./syntaxes/html1.tmLanguage.json",
				"scopeName": "text.html1.basic"
			}
		],
		"languages": [
			{
				"extensions": [
					".html1"
				],
				"id": "html1"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "cd client && npm install && cd .. && npm run compile",
		"compile": "tsc -b",
		"watch": "tsc -b -w",
		"lint": "eslint",
		"postinstall": "cd client && npm install && cd ../server && npm install && cd .."
	},
	"devDependencies": {
		"@eslint/js": "^9.13.0",
		"@stylistic/eslint-plugin": "^2.9.0",
		"@types/mocha": "^5.2.7",
		"@types/node": "^20",
		"eslint": "^9.13.0",
		"typescript": "^5.6.2",
		"typescript-eslint": "^8.11.0"
	}
}
