{
	"activationEvents": [
		"onFileSystem:memfs"
	],
	"contributes": {
		"commands": [
			{
				"category": "MemFS",
				"command": "memfs.workspaceInit",
				"title": "Setup Workspace"
			},
			{
				"category": "MemFS",
				"command": "memfs.init",
				"title": "Create Files"
			},
			{
				"category": "MemFS",
				"command": "memfs.reset",
				"title": "Delete Files"
			},
			{
				"category": "MemFS",
				"command": "memfs.deleteFile",
				"title": "Delete \"file.txt\""
			},
			{
				"category": "MemFS",
				"command": "memfs.addFile",
				"title": "Add \"file.txt\""
			}
		],
		"menus": {
			"commandPalette": [
				{
					"command": "memfs.init",
					"when": "workbenchState == workspace"
				},
				{
					"command": "memfs.reset",
					"when": "workbenchState == workspace"
				},
				{
					"command": "memfs.deleteFile",
					"when": "workbenchState == workspace"
				},
				{
					"command": "memfs.addFile",
					"when": "workbenchState == workspace"
				},
				{
					"command": "memfs.workspaceInit",
					"when": "workbenchState != workspace"
				}
			]
		}
	},
	"devDependencies": {
		"@stylistic/eslint-plugin": "^2.9.0",
		"@types/node": "^20"
	}
}
