{
	"name": "code-tutor",
	"displayName": "Code Tutor",
	"version": "0.0.1",
	"description": "Your personal AI code tutor",
	"categories": [
		"Other"
	],
	"main": "./out/extension.js",
	"scripts": {
		"compile": "tsc -p ./",
		"lint": "eslint",
		"pretest": "npm run compile && npm run lint",
		"test": "vscode-test",
		"vscode:prepublish": "npm run compile",
		"watch": "tsc -watch -p ./"
	},
	"contributes": {
		"commands": [
			{
				"command": "code-tutor.annotate",
				"icon": "$(comment)",
				"title": "Toggle Tutor Annotations"
			}
		],
		"menus": {
			"editor/title": [
				{
					"command": "code-tutor.annotate",
					"group": "navigation"
				}
			]
		}
	},
	"activationEvents": [],
	"dependencies": {},
	"devDependencies": {
		"@codeeditorland/test-cli": "0.0.1",
		"@codeeditorland/test-electron": "0.0.1",
		"@eslint/js": "^9.13.0",
		"@stylistic/eslint-plugin": "^2.9.0",
		"@types/mocha": "^10.0.7",
		"@types/node": "20.x",
		"@types/vscode": "^1.93.0",
		"eslint": "^9.13.0",
		"typescript": "^5.4.5",
		"typescript-eslint": "^8.16.0"
	},
	"engines": {
		"vscode": "^1.93.0"
	}
}
