{
	"name": "vscode-comment-api-example",
	"displayName": "Comment API Sample",
	"version": "0.0.1",
	"private": false,
	"description": "Comment API Sample",
	"keywords": [
		"land"
	],
	"homepage": "HTTPS://GitHub.Com/CodeEditorLand/LandExtensionSamples#readme",
	"bugs": {
		"url": "HTTPS://GitHub.Com/CodeEditorLand/LandExtensionSamples/issues"
	},
	"repository": {
		"type": "git",
		"url": "git+HTTPS://github.com/CodeEditorLand/LandExtensionSamples.git"
	},
	"license": "SEE LICENSE IN LICENSE",
	"author": {
		"name": "üåÜ‚ÄÅ‚Äî‚ÄÅLand‚ÄÅ‚Äî",
		"email": "Land@PlayForm.Cloud",
		"url": "HTTPS://Land.PlayForm.Cloud"
	},
	"type": "module",
	"main": "./out/extension.js",
	"scripts": {
		"Document": "Document 'Source/**/*.ts'",
		"compile": "tsc -p ./",
		"prepublishOnly": "Build 'Source/**/*.ts'"
	},
	"contributes": {
		"commands": [
			{
				"command": "mywiki.createNote",
				"enablement": "!commentIsEmpty",
				"title": "Create Note"
			},
			{
				"command": "mywiki.replyNote",
				"enablement": "!commentIsEmpty",
				"title": "Reply"
			},
			{
				"command": "mywiki.editNote",
				"icon": {
					"dark": "resources/edit_inverse.svg",
					"light": "resources/edit.svg"
				},
				"title": "Edit"
			},
			{
				"command": "mywiki.deleteNote",
				"icon": {
					"dark": "resources/close_inverse.svg",
					"light": "resources/close.svg"
				},
				"title": "Delete"
			},
			{
				"command": "mywiki.deleteNoteComment",
				"icon": {
					"dark": "resources/close_inverse.svg",
					"light": "resources/close.svg"
				},
				"title": "Delete"
			},
			{
				"command": "mywiki.saveNote",
				"title": "Save"
			},
			{
				"command": "mywiki.cancelsaveNote",
				"title": "Cancel"
			},
			{
				"command": "mywiki.startDraft",
				"enablement": "!commentIsEmpty",
				"title": "Start Draft"
			},
			{
				"command": "mywiki.finishDraft",
				"title": "Finish Draft"
			},
			{
				"command": "mywiki.dispose",
				"title": "Remove All Notes"
			}
		],
		"menus": {
			"commandPalette": [
				{
					"command": "mywiki.createNote",
					"when": "false"
				},
				{
					"command": "mywiki.replyNote",
					"when": "false"
				},
				{
					"command": "mywiki.deleteNote",
					"when": "false"
				},
				{
					"command": "mywiki.deleteNoteComment",
					"when": "false"
				}
			],
			"comments/comment/context": [
				{
					"command": "mywiki.cancelsaveNote",
					"group": "inline@1",
					"when": "commentController == comment-sample"
				},
				{
					"command": "mywiki.saveNote",
					"group": "inline@2",
					"when": "commentController == comment-sample"
				}
			],
			"comments/comment/title": [
				{
					"command": "mywiki.editNote",
					"group": "group@1",
					"when": "commentController == comment-sample"
				},
				{
					"command": "mywiki.deleteNoteComment",
					"group": "group@2",
					"when": "commentController == comment-sample && comment == canDelete"
				}
			],
			"comments/commentThread/context": [
				{
					"command": "mywiki.createNote",
					"group": "inline",
					"when": "commentController == comment-sample && commentThreadIsEmpty"
				},
				{
					"command": "mywiki.replyNote",
					"group": "inline",
					"when": "commentController == comment-sample && !commentThreadIsEmpty"
				},
				{
					"command": "mywiki.startDraft",
					"group": "inline",
					"when": "commentController == comment-sample && commentThreadIsEmpty"
				},
				{
					"command": "mywiki.finishDraft",
					"group": "inline",
					"when": "commentController == comment-sample && commentThread == draft"
				}
			],
			"comments/commentThread/title": [
				{
					"command": "mywiki.deleteNote",
					"group": "navigation",
					"when": "commentController == comment-sample && !commentThreadIsEmpty"
				}
			]
		}
	},
	"activationEvents": [
		"*"
	],
	"devDependencies": {
		"@playform/build": "0.0.7",
		"@playform/document": "0.0.6",
		"@types/node": "^18"
	},
	"publishConfig": {
		"access": "public"
	}
}
